---
import { Picture } from 'astro:assets';
import portfolioData from '../../data/portfolio.json';
import dks from '../assets/dks.png';
import angyanLegal from '../assets/angyan-legal.png';
import winkler from '../assets/winkler.png';
import zimtwirbel from '../assets/zimtwirbel.png';



---

<section>

    <div class="container mx-auto px-4 py-16">
        <h2 class="text-4xl font-bold mb-8 text-center">My Portfolio</h2>

        <div id="portfolio">
            {portfolioData.map((item, index) => {
                let imageSrc;
                let imageAlt;
                switch(item.title) {
                    case "DKS Rechtsanw채lte":
                        imageSrc = dks;
                        imageAlt= "DKS Rechtsanw채lte Website Screenshot";
                        break;
                    case "Angyan Legal":
                        imageSrc = angyanLegal;
                        imageAlt= "Angyan Legal Website Screenshot";
                        break;
                    case "Winkler B채ckerei":
                        imageSrc = winkler;
                        imageAlt= "Winkler B채ckerei Website Screenshot";
                        break;
                    case "Zimtwirbel":
                        imageSrc = zimtwirbel;
                        imageAlt= "Zimtwirbel Website Screenshot";
                        break;
                    default:
                        imageSrc = null;
                }
                return (
                    <div class={`mb-12 max-w-150 ${index % 2 === 1 ? 'ml-auto' : ''}`}>
                        <Picture
                            src={imageSrc}
                            formats={["avif", "webp"]}
                            widths={[480, 720, 1080, 1440, 2500]}
                            sizes="(min-width: 1024px) 50vw, 100vw"
                            alt={imageAlt}
                            class="w-full h-auto clip-image"
                        />                        <h3 class="text-2xl font-semibold mb-2">{item.title}</h3>
                        <p class="text-gray-700 mb-4">{item.description}</p>
                        <div class="flex flex-wrap gap-2 mb-4">
                            {item.tags.map((tag) => (
                                <span class="bg-blue-100 text-blue-800 text-sm font-medium mr-2 px-2.5 py-0.5 rounded">{tag}</span>
                            ))}
                        </div>
                        <a href={item.link} target="_blank" class="text-blue-600 hover:underline">Visit Website</a>
                    </div>
                );
            })}
        </div>
    </div>

</section>

